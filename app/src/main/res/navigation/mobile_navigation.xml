<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.mynavigationdrawer.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.mynavigationdrawer.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.mynavigationdrawer.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.mynavigationdrawer.ui.cart.CartFragment"
        android:label="@string/menu_cart"
        tools:layout="@layout/fragment_cart"/>
    <activity
        android:id="@+id/nav_subway"
        android:name="com.example.mynavigationdrawer.activity.SubwayActivity"
        android:label="@string/menu_subway"
        tools:layout="@layout/activity_subway"/>
    <activity
        android:id="@+id/nav_map"
        android:name="com.example.mynavigationdrawer.activity.MapsActivity"
        android:label="@string/menu_map"
        tools:layout="@layout/activity_maps"/>
    <activity
        android:id="@+id/nav_hotel"
        android:name="com.example.mynavigationdrawer.activity.HotelActivity"
        android:label="@string/menu_hotel"
        tools:layout="@layout/activity_hotel"/>
</navigation>